<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="statInfo"
            type="com.aiden.vokamoka.data.dto.StatInfo"
            />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_stat_info"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardBackgroundColor="@color/mono50"
        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/mono300"
        android:elevation="4dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="16dp"
        android:shadowColor="@color/mono500"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ddd"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@{statInfo.iconDrawable}"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_stat_name"
                android:layout_marginBottom="20dp"
                tools:src="@drawable/ic_folder"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_stat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{statInfo.name}"
                style="@style/boldTextStyle"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                tools:text="Hello, World!"
                />
 d
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>