<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="vm"
            type="com.aiden.vokamoka.ui.viewmodel.VocaViewModel"
            />
        <variable
            name="onPageListener"
            type="com.aiden.vokamoka.base.listener.OnPageInfoListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_voca_word"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dv_word_section"
            app:vocaFragments="@{vm.vocaFragments}"
            app:onPageListener="@{onPageListener}"
            />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/dv_word_section"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/vp_voca_word"
            app:layout_constraintBottom_toTopOf="@id/cl_voca_status"
            app:layout_constraintStart_toStartOf="parent"
            app:dividerColor="@color/mono100"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_voca_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/dv_word_section"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="12dp"
            >

            <!--
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_status_vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_percent="0.7"
                />
                -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_voca_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_round_all_4"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_page_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_status_slash"
                    android:layout_marginEnd="16dp"
                    style="@style/baseTextStyle"
                    android:textSize="18sp"
                    android:textColor="@color/blue_500"
                    android:text="@{String.valueOf(vm.pageCurrent)}"
                    tools:text="1"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_status_slash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/baseTextStyle"
                    android:text="/"
                    android:textColor="@color/mono800"
                    android:textSize="16sp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_page_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/tv_status_slash"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    style="@style/baseTextStyle"
                    android:textColor="@color/mono600"
                    android:textSize="14sp"
                    android:text="@{String.valueOf(vm.pageTotal)}"
                    tools:text="14"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_timer"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_alarm_b"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/baseTextStyle"
                    android:textColor="@color/mono600"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/iv_timer"
                    app:layout_constraintEnd_toEndOf="@id/iv_timer"
                    app:layout_constraintTop_toBottomOf="@id/iv_timer"
                    android:text="@{String.valueOf(vm.pageTimeValue)}"
                    tools:text="10"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- todo Admob View -->
            <View
                android:id="@+id/v_temp"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/mono200"
                android:layout_marginTop="12dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
