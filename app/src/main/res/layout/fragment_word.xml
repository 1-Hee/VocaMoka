<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="vm"
            type="com.aiden.vokamoka.ui.viewmodel.WordViewModel"
            />
        <variable
            name="click"
            type="com.aiden.vokamoka.base.listener.ViewClickListener"
            />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_voca_word"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:padding="8dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_word_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/mono50"
            app:strokeWidth="2dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            android:shadowColor="@color/mono200"
            >
            <!-- 앞면 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_display_word"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/boldTextStyle"
                    android:textAlignment="center"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textSize="30sp"
                    android:text="@{vm.vocaWord}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Hello, World!"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_word_guide_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/lightTextStyle"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    android:text="@string/tv_word_guide_message"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="18dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_word_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/mono50"
            app:strokeWidth="2dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            android:shadowColor="@color/mono200"
            android:visibility="gone"
            tools:visibility="visible"
            >
            <!-- 뒷면 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_word_meaning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/baseTextStyle"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:text="@{vm.vocaMeans}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="단어의 뜻 (Meaning)"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_word_tag"
                    android:layout_width="96dp"
                    android:layout_height="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardBackgroundColor="@color/mono200"
                    app:cardCornerRadius="4dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="18dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@style/baseTextStyle"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="@{vm.tagName}"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginHorizontal="4dp"
                            tools:text="ABCDEFGHIJKL"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:text="@string/btn_check"
                    style="@style/boldTextStyle"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/yellow_500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_word_meaning"
                    android:layout_marginTop="16dp"
                    android:onClick="@{(v)->click.onViewClick(v)}"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
