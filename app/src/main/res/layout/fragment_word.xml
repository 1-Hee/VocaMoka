<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="vm"
            type="com.aiden.vokamoka.ui.viewmodel.VocaViewModel"
            />
        <variable
            name="onPageListener"
            type="com.aiden.vokamoka.base.listener.OnPageInfoListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_voca_word"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="328dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_voca_status"
            app:vocaFragments="@{vm.vocaFragments}"
            app:onPageListener="@{onPageListener}"
            android:background="@color/secondary"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_voca_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/vp_voca_word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
