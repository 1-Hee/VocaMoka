<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VokaMoka" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 주요 색상 -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 보조 색상 -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorOnSecondary">@color/white</item>


        <!-- 배경 -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="baseTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="boldTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="lightTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.VokaMoka" parent="Base.Theme.VokaMoka" />
</resources>