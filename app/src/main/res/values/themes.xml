<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VokaMoka" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- 기본 색상 -->
        <item name="android:colorBackground">@color/surface_base</item>

        <!-- 주요 색상 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 보조 색상 -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- 강조 / 포인트 색상 -->
        <item name="colorAccent">@color/accent</item>

        <!-- 성공 / 오류 등 상태 색상 -->
        <!--
        <item name="colorSuccess">@color/success</item>
        <item name="colorError">@color/error</item>
        -->

        <!-- 텍스트 & 경계선 -->
        <!--
        <item name="textColorPrimary">@color/text_strong</item>
        <item name="textColorSecondary">@color/text_muted</item>
        -->
        <item name="android:colorForeground">@color/text_strong</item>
        <item name="colorSurface">@color/surface_base</item>
        <item name="colorOutline">@color/border</item>

        <!-- 추가 톤 -->
        <item name="colorTertiary">@color/tint_optional</item>


    </style>

    <style name="baseTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="boldTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="lightTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.VokaMoka" parent="Base.Theme.VokaMoka" />
</resources>